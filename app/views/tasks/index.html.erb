<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %><%= link_to "delete", task_path(task), method: :delete, data: { confirm: "are you sure?" } %> <% if task.completed %>
        <i class="fa fa-check-square-o"></i>
      <% else %>
        <i class="fa fa-square-o"></i>
      <% end %></li>
  <% end %>
</ul>


<%= link_to  "Add new task", new_task_path()%>
